@model List<MvcRazorView.ViewModels.EstudanteViewModel>
    
@{
    ViewData["Title"] = "Estudantes";
}

<h1>Estudantes</h1>
<p>@Model.Count estudantes cadastrados</p>

@if(Model.Count == 0){
    <p>Nenhum estudante cadastrado</p>
    <a href="#">Cadastrar estudante</a>
}
else{
    <p>@Model.Count estudantes cadastrados</p>
    @foreach(var estudante in Model)
{
    <h3>
        <a href="/Estudante/Show/@estudante.Id">@estudante.Nome</a>
    </h3>
    <p>@estudante.Endereco</p>
    @if(estudante.Ativo){
        <a href="#">Iniciar conversa</a>
    }
    <hr>
}  
} 
